<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="realestateconz_api.client.class">RealestateCoNz_Api_Client</parameter>
        <parameter key="realestateconz_api.client.version">1</parameter>
        <parameter key="realestateconz_api.client.host">api.realestate.co.nz</parameter>
    </parameters>

    <services>
        <service id="realestateconz_api.client" class="%realestateconz_api.client.class%">
            <argument>%php_airbrake.api_key%</argument>
            <argument>%kernel.environment%</argument>
            <argument type="parameter" id="realestateconz_api.client.version" />
            <argument type="parameter" id="realestateconz_api.client.host" />
        </service>

        <service id="php_airbrake.exception_listener" class="%php_airbrake.exception_listener.class%">
            <tag name="kernel.event_listener" event="kernel.exception" method="onKernelException" />
            <argument type="service" id="php_airbrake.client" />
        </service>

        <service id="php_airbrake.shutdown_listener" class="%php_airbrake.shutdown_listener.class%">
            <tag name="kernel.event_listener" event="kernel.controller" method="register" />
            <argument type="service" id="php_airbrake.client" />
        </service>
    </services>
</container>